<body>
    <div class="container">
        <div class="registration form">
            <header class="topics">Register</header>
            <form asp-action="Register" asp-controller="Logins" id="Registerform">
                <p style="color:red;"> @ViewBag.InputWarning </p>

                <input asp-for="Email" placeholder="Email">
                <p style="color:red;"> @ViewBag.EmailWarning </p>

                <input asp-for="Password" placeholder="Password">
                <p style="color:red;"> @ViewBag.PasswordWarning </p>

                <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                <p style="color:red;"> @ViewBag.PasswordWarning </p>

                <input asp-for="Name" placeholder="Name" />

                <input type="submit" class="button" value="Register">
            </form>
            <div class="register">
                <span class="register">
                    Already have an account?
                    <label>
                        <a asp-action="Login" asp-controller="Logins">Login</a>
                    </label>
                </span>
            </div>
        </div>
    </div>
</body>