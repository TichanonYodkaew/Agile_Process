@using (Html.BeginForm("Register", "Logins", FormMethod.Post, new { id = "Registerform" }))
{
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p style="color:red;"> @ViewBag.InputWarning </p>

            <div class="form-group">
                <label style="color:red;">*</label><label class="control-label"> อีเมล : </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <p style="color:red;"> @ViewBag.EmailWarning </p>
            </div>

            <br />
            <div class="form-group">
                <label style="color:red;">*</label><label class="control-label"> รหัสผ่าน : </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <p style="color:red;"> @ViewBag.PasswordWarning </p>
            </div>

            <br />
            <div class="form-group">
                <label style="color:red;">*</label><label class="control-label"> ยืนยันรหัสผ่าน : </label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <p style="color:red;"> @ViewBag.PasswordWarning </p>
            </div>

            <br />
            <div class="form-group">
                <label style="color:red;">*</label><label class="control-label"> ชื่อเล่น : </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

