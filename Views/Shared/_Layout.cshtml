<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgileRap_Process2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-multiselect.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UniversalCss.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/FooterCSS.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/AgileRap_Process2.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgileRap_Process2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                        <li class="nav-item">
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Works" asp-action="Index">Works</a> *@
                            @Html.ActionLink("Works", "Index", "Works", new
                                {
                                    RequseterFilter = Context.Session.GetString("RequseterFilter"),
                                    ProviderFilterValue = Context.Session.GetString("ProviderFilterValue"),
                                    ProjectFilter = Context.Session.GetString("ProjectFilter"),
                                    StatusFilter = Context.Session.GetString("StatusFilter"),
                                    IsChangePage = true

                                }, new { @class = "nav-link text-dark" })
                        </li>

                    </ul>
                    <ul class="navbar-nav flex-grow-0">
                        @if (Context.Session.GetString("UserEmailSession") != null)
                        {
                            <li class="nav-item ">
                                <a style="color:darkmagenta;" class="nav-link" disabled>@Context.Session.GetString("UserNameSession")</a>
                            </li>

                            <li class="nav-item ">
                                <a style="color:darkcyan;" class="nav-link" disabled>@Context.Session.GetString("UserEmailSession")</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link text-danger" asp-area="" asp-controller="Logins" asp-action="Logout">Logout</a>
                            </li>
                            @* <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Profile
                        </a>
                        <div class="dropdown-menu" aria-labelledby="profileDropdown">
                        <!-- Dropdown menu links go here -->
                        <a class="dropdown-item" disabled>@Context.Session.GetString("UserNameSession")</a>
                        <a style="color:darkmagenta;" class="dropdown-item" disabled>@Context.Session.GetString("UserNameSession")</a>
                        <a style="color:darkcyan;" class="dropdown-item" disabled>@Context.Session.GetString("UserEmailSession")</a>
                        <a class="dropdown-item text-danger" asp-area="" asp-controller="Logins" asp-action="Logout">Logout</a>
                        </div>
                        </div> *@
                        }
                        else
                        {
                            <li class="nav-item ">
                                <a class="nav-link text-primary" asp-area="" asp-controller="Logins" asp-action="Login">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*     <footer class="border-top footer text-muted bg-white">
    <div class="container">
    &copy; 2024 - AgileRap_Process2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>   *@

    @await Html.PartialAsync("_Footer")
@*     <footer class="fixed-bottom">
        <div class="text-center p-3 bg-white">
            &copy; @DateTime.Now.Year - AgileRap_Process2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-multiselect.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
