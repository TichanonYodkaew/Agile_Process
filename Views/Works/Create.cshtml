@model List<Work>

@{
    ViewData["Title"] = "Create";
    List<SelectListItem> UserDropdownList = ViewBag.UserDropdown;
    List<SelectListItem> StatusDropdownList = ViewBag.StatusDropdown;
    string Role = Context.Session.GetString("Default");
}

